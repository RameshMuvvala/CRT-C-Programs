#include<stdio.h>
int i,j,k;
void rev(int arr[], int k, int first, int end)
{
	int var;
	while(first<end)
	{
	var = arr[first];
	arr[first] = arr[end];
	arr[end] = var;
	
	first++;
	end--;

	}
	printf("\nreversed array:\n");
	for(int i=0;i<=k-1;i++)
	{
		printf("%d",arr[i]);	
	}
}
int main(){
	int arr[] = {1,2,3,4,5,6,7,8};
	printf("Size of array:\n");
	int k = sizeof(arr)/sizeof(arr[0]);
	printf("%d\n",k);
	printf("Normal array:\n");
	for(int i=0;i<=arr[i];i++)
	{
		printf("%d",arr[i]);	
	}
	rev(arr, k,0,k-1);
	
	return 0;
}
